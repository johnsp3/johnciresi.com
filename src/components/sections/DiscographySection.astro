---
import Section from '@/components/ui/Section.astro';
import Heading from '@/components/ui/Heading.astro';
import Divider from '@/components/ui/Divider.astro';
import { ErrorBoundary } from '@/components/ui';
import AlbumSelector from '@/components/interactive/AlbumSelector';
import FeaturedAlbum from '@/components/interactive/FeaturedAlbum';
---

<!-- Discography Section -->
<Section id="music" variant="default" padding="xl">
  <div class="text-center mb-24">
    <Heading level={2} variant="section" class="text-black mb-8 animate-slide-up">
      DISCOGRAPHY
    </Heading>
    <Divider variant="default" size="md" class="mb-12" />
    <p class="text-xl lg:text-2xl text-gray-700 font-light tracking-wide max-w-3xl mx-auto leading-relaxed animate-fade-in" style="animation-delay: 0.2s;">
      A collection of my albums spanning rock, hard rock, and instrumental work
    </p>
    <div class="mt-8 flex justify-center">
      <div class="w-16 h-px bg-gradient-to-r from-transparent via-gray-400/60 to-transparent"></div>
    </div>
  </div>
    
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 items-start">
    <!-- Featured Album -->
    <ErrorBoundary client:load>
      <FeaturedAlbum client:load />
    </ErrorBoundary>
      
    <!-- Album List -->
    <ErrorBoundary client:load>
      <AlbumSelector client:load />
    </ErrorBoundary>
  </div>
</Section>
