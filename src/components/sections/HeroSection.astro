---
import Heading from '@/components/ui/Heading.astro';
import Divider from '@/components/ui/Divider.astro';
import ScrollIndicator from '@/components/ui/ScrollIndicator.astro';
import { ErrorBoundary } from '@/components/ui';
import HeroButtons from '@/components/interactive/HeroButtons';
---

<!-- Hero Section -->
<section class="min-h-screen flex items-center justify-center relative overflow-hidden">
  <!-- Sophisticated Background -->
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-gradient-to-br from-primary-950 via-primary-950 to-primary-900"></div>
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-white/5 via-transparent to-transparent"></div>
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-white/5 rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-white/3 rounded-full blur-3xl animate-float" style="animation-delay: -3s;"></div>
    <div class="absolute top-1/2 left-1/2 w-64 h-64 bg-accent-500/10 rounded-full blur-2xl animate-glow"></div>
  </div>
  
  <!-- Hero Content -->
  <div class="relative z-10 text-center px-6 max-w-6xl mx-auto">
    <div class="mb-16">
      <div class="mb-8">
        <Heading level={1} variant="hero" class="text-primary-50 mb-6">
          JOHN CIRESI
        </Heading>
        <Divider variant="white" size="lg" class="mb-12" />
      </div>
      
      <div class="max-w-4xl mx-auto mb-16">
        <p class="text-2xl sm:text-3xl lg:text-4xl text-primary-200 font-light tracking-wide leading-relaxed animate-fade-in" style="animation-delay: 0.5s;">
          Musician â€¢ Visual Artist
        </p>
        <div class="mt-8 flex justify-center">
          <div class="w-24 h-px bg-gradient-to-r from-transparent via-primary-300/60 to-transparent animate-shimmer"></div>
        </div>
      </div>
    </div>
    
    <ErrorBoundary client:load>
      <HeroButtons client:load />
    </ErrorBoundary>
  </div>
  
  <!-- Sophisticated Scroll Indicator -->
  <ScrollIndicator />
</section>
