---
// Hero.astro - Full viewport hero section with studio background
---

<section id="hero" class="relative min-h-screen flex items-center justify-center overflow-hidden bg-dark-bg">
  <!-- Hero Background Image - Optimized -->
  <div class="absolute inset-0 overflow-hidden">
    <img
      src="/images/John_Studio_High_quality_hero_poster.png"
      alt="John Ciresi Studio"
      class="w-full h-full object-cover"
      loading="eager"
    />
    <!-- Dark overlay for text readability -->
    <div class="absolute inset-0 bg-dark-bg/60"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 text-center px-4 sm:px-6 lg:px-8 max-w-5xl mx-auto">
    <!-- Main Title -->
    <h1 class="text-6xl sm:text-7xl md:text-8xl lg:text-9xl font-bold mb-6 animate-fade-in">
      <span class="gradient-text bg-gradient-to-r from-accent-primary via-accent-secondary to-accent-gold bg-clip-text text-transparent animate-gradient-x">
        JOHN CIRESI
      </span>
    </h1>

    <!-- Subtitle -->
    <p class="text-xl sm:text-2xl md:text-3xl text-text-secondary mb-12 animate-fade-in" style="animation-delay: 0.2s;">
      Singer-songwriter, guitarist, and producer
    </p>

    <!-- CTA Button -->
    <a
      href="#music"
      class="btn-primary inline-flex items-center gap-2 px-8 py-4 bg-accent-primary hover:bg-accent-primary/90 text-white rounded-full font-semibold text-lg transition-all duration-300 hover:scale-105 hover:shadow-[0_0_30px_rgba(30,64,175,0.5)] animate-scale-in"
      style="animation-delay: 0.4s;"
    >
      <span>Explore Music</span>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
      </svg>
    </a>

    <!-- Audio Wave Visualization (decorative) -->
    <div class="mt-16 flex items-center justify-center gap-1 opacity-50 animate-fade-in" style="animation-delay: 0.6s;">
      <div class="audio-bar h-8 w-1 bg-gradient-to-t from-accent-primary to-accent-secondary rounded-full"></div>
      <div class="audio-bar h-12 w-1 bg-gradient-to-t from-accent-primary to-accent-secondary rounded-full" style="animation-delay: 0.1s;"></div>
      <div class="audio-bar h-6 w-1 bg-gradient-to-t from-accent-primary to-accent-secondary rounded-full" style="animation-delay: 0.2s;"></div>
      <div class="audio-bar h-16 w-1 bg-gradient-to-t from-accent-primary to-accent-secondary rounded-full" style="animation-delay: 0.3s;"></div>
      <div class="audio-bar h-10 w-1 bg-gradient-to-t from-accent-primary to-accent-secondary rounded-full" style="animation-delay: 0.4s;"></div>
      <div class="audio-bar h-14 w-1 bg-gradient-to-t from-accent-primary to-accent-secondary rounded-full" style="animation-delay: 0.5s;"></div>
      <div class="audio-bar h-8 w-1 bg-gradient-to-t from-accent-primary to-accent-secondary rounded-full" style="animation-delay: 0.6s;"></div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <div class="flex flex-col items-center gap-2 text-text-secondary/50">
      <span class="text-sm uppercase tracking-wider">Scroll</span>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</section>

<style>
  /* Gradient animation */
  @keyframes gradient-shift {
    0%, 100% {
      opacity: 0.5;
      transform: scale(1) rotate(0deg);
    }
    50% {
      opacity: 0.8;
      transform: scale(1.1) rotate(5deg);
    }
  }

  .animate-gradient-shift {
    animation: gradient-shift 15s ease-in-out infinite;
  }

  /* Gradient text animation */
  @keyframes gradient-x {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .animate-gradient-x {
    background-size: 200% auto;
    animation: gradient-x 8s ease-in-out infinite;
  }

  /* Floating particles */
  .particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: rgba(0, 102, 204, 0.15);
    border-radius: 50%;
    animation: float 10s infinite ease-in-out;
  }

  .particle:nth-child(1) {
    top: 20%;
    left: 20%;
    animation-delay: 0s;
  }

  .particle:nth-child(2) {
    top: 40%;
    left: 80%;
    animation-delay: 2s;
  }

  .particle:nth-child(3) {
    top: 60%;
    left: 30%;
    animation-delay: 4s;
  }

  .particle:nth-child(4) {
    top: 80%;
    left: 70%;
    animation-delay: 6s;
  }

  .particle:nth-child(5) {
    top: 30%;
    left: 50%;
    animation-delay: 8s;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0) translateX(0);
      opacity: 0;
    }
    25% {
      opacity: 1;
    }
    50% {
      transform: translateY(-100px) translateX(50px);
      opacity: 0.5;
    }
    75% {
      opacity: 1;
    }
  }

  /* Audio bar animation */
  .audio-bar {
    animation: audio-pulse 1.5s ease-in-out infinite;
  }

  @keyframes audio-pulse {
    0%, 100% {
      transform: scaleY(0.5);
    }
    50% {
      transform: scaleY(1);
    }
  }

  /* Fade in animation */
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 1s ease-out forwards;
    opacity: 0;
  }

  /* Scale in animation */
  @keyframes scale-in {
    from {
      opacity: 0;
      transform: scale(0.9);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  .animate-scale-in {
    animation: scale-in 1s ease-out forwards;
    opacity: 0;
  }
</style>
